<?php

$class = $surface->Get('class');

$imeth = $class->GetMethodsWithTags([['public','protected','private']]);
$iprop = $class->GetPropertiesWithTags([['public','protected','private']]);
$smeth = $class->GetMethodsWithTags(['static']);
$sprop = $class->GetPropertiesWithTags(['static']);

$surface->Set('page-title',"Class {$class->Name}");

?>

<h1>class <?php echo $class->Name ?> {</h1>
<div class="senpai class">
<?php if(count($class->Extends) || count($class->Traits) || count($class->Interfaces)) { ?>
	<ul class="extends">
<?php foreach($class->Extends as $extend) { ?><li>extends <span class="name"><?php echo $extend ?></span></li><?php } ?>
<?php foreach($class->Interfaces as $iface) { ?><li>implements <span class="name"><?php echo $iface ?></span></li><?php } ?>
<?php foreach($class->Traits as $trait) { ?><li>uses <span class="name"><?php echo $trait ?></span></li><?php } ?>
	</ul>
<?php } ?>

	<div class="info">
	<?php echo $class->GetInfoParsed() ?>
	</div>

	<hr />

	<h2>Instance Properties</h2>
	<div class="members">
<?php
$surface
->Set('properties',$iprop)
->Area('class-properties')
?>
	</div>

	<h2>Instance Methods</h2>
	<div class="members">
<?php
$surface
->Set('methods',$imeth)
->Area('class-methods')
?>
	</div>

	<hr />

	<h2>Static Properties</h2>
	<div class="members">
<?php
$surface
->Set('properties',$sprop)
->Area('class-properties')
?>
	</div>

	<h2>Static Methods</h2>
	<div class="members">
<?php
$surface
->Set('methods',$smeth)
->Area('class-methods')
?>
	</div>
</div>
<div class="headline">}</div>